<?xml version="1.0" encoding="UTF-8"?>


<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<VBox xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml" 
      prefHeight="400" prefWidth="600"
      fx:controller="ifpr.pgua.eic.atividade3bim.telas.CadastroCarro"
      spacing="5.0"
      >
    <padding>
        <Insets topRightBottomLeft="8.0"/>
    </padding>

    <Label text="Modelo:" labelFor="$tfModelo"/>
    <TextField fx:id="tfModelo"/>

    <Label text="Marca" labelFor="$tfMarca"/>
    <TextField fx:id="tfMarca"/> 
    
    <Label text="Placa" labelFor="$tfPlaca"/>
    <TextField fx:id="tfPlaca"/>

    <Label text="Cor" labelFor="$tfCor"/>
    <TextField fx:id="tfCor"/>

    <Label text="Ano de Fabricação" labelFor="$tfAnoFabricacao"/>
    <TextField fx:id="tfAnoFabricacao"/>

    <Label text="Ano de Modelo" labelFor="$tfAnoModelo"/>
    <TextField fx:id="tfAnoModelo"/>    

    <Label text="Kilometragem Atual" labelFor="$tfKilometragemAtual"/>
    <TextField fx:id="tfKilometragemAtual"/>

    <Label text="Peso" labelFor="$tfPeso"/>
    <TextField fx:id="tfPeso"/>


    <HBox spacing="5.0">
        <Button fx:id="btCadastrar" text="Cadastar" onAction="#cadastrar"/>
        <Button fx:id="btLimpar" text="Limpar" onAction="#limpar"/>
    </HBox>

</VBox>